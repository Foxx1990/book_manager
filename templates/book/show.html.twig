{# templates/book/show.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ book.title }}</h1>
    <p>Author: {{ book.author }}</p>
    <p>Description: {{ book.description }}</p>
    <p>Year: {{ book.publicationYear }}</p>
    <p>ISBN: {{ book.isbn }}</p>
    <img src="{{ asset('uploads/book_images/' ~ book.coverImageName) }}" alt="Cover Image">
    <a href="{{ path('book_edit', {'id': book.id}) }}">Edit</a>
    <form action="{{ path('book_delete', {'id': book.id}) }}" method="post" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
        <button type="submit">Delete</button>
    </form>
    <a href="{{ path('book_list') }}">Back to list</a>
{% endblock %}